<h1>All posts</h1>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>File</th>
        <th>Title</th>
        <th>Status</th>
        <th>Allow Comments</th>
        <th>Body</th>
    </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td><img class="img-responsive" height="50px" src="/uploads/{{file}}" alt=""></td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>
                    <a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>